#region-Inicio.container
  .region
    .region-title
      %h1= page_title!('index')

  .region
    -if current_admin
      .admin-control
        = link_to 'Crear Slide', new_slide_path, class: 'btn btn-primary'
  
    - @slides.each do |slide|
      = image_tag slide.imagen_url(:full)
      - if current_admin
        = link_to 'Editar', edit_slide_path(slide), class: 'btn btn-success'
        = link_to 'Eliminar', slide, :method => :delete, :data => { :confirm => '¿Estás Seguro?' }, class: 'btn btn-danger'
