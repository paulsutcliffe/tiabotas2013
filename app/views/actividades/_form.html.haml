= form_for @actividad, :html => { class: 'form-horizontal', role: 'form', :multipart => true } do |f|
  - if @actividad.errors.any?
    #error_explanation
      %h2= "#{pluralize(@actividad.errors.count, "error")}"
      %ul
        - @actividad.errors.full_messages.each do |msg|
          %li= msg

  .form-group
    = f.label :foto, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.file_field :foto, class: 'form-control'
  .actions
    = f.submit 'Guardar', class: 'btn btn-default'
