= form_for @slide, :html => { class: 'form-horizontal', role: 'form', :multipart => true } do |f|
  - if @slide.errors.any?
    #error_explanation
      %h2= "#{pluralize(@slide.errors.count, "error")}"
      %ul
        - @slide.errors.full_messages.each do |msg|
          %li= msg

  .form-group
    = f.label :link, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.text_field :link, class: 'form-control'
  .form-group
    = f.label :imagen, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.file_field :imagen, class: 'form-control'
  .actions
    = f.submit 'Guardar', class: 'btn btn-default'
