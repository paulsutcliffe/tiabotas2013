!!!
%html
  %head
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1.0"}
    %title= content_for?(:title) ? yield(:title) : 'Tiabotas2013'
    %meta{:name => "description", :content => "#{content_for?(:description) ? yield(:description) : 'Tiabotas2013'}"}
    = stylesheet_link_tag "application", media: "all"
    = javascript_include_tag "application"
    = yield(:javascript)
    = yield(:css)
    = csrf_meta_tags
  %body
    
    %header#main-header
      = render 'layouts/nav_advanced'
    .container
      %section{:role => "main"}
        = render 'layouts/messages'
        = yield
    %footer#main-footer
      .animals-pulpos
      .animals-burbujas
      .animals-concha
      .animals-angelica
      .animals-burbujas3
      .animals-camaron
      .animals-burbujas2
      .animals-globo
      .animals-burbujas1
      .animals-taira
      .animals-estrella

      = render 'shared/google_analytics'
